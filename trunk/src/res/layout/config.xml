<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceLarge" android:text="Status :" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></TextView>
        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/conf_status" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/textView1"></Spinner>
        <TextView android:layout_width="wrap_content" android:id="@+id/textView2" android:textAppearance="?android:attr/textAppearanceLarge" android:text="Time :" android:layout_height="wrap_content" android:layout_below="@+id/conf_status" android:layout_alignParentLeft="true"></TextView>
        <TextView android:layout_width="wrap_content" android:id="@+id/conf_timeDisplay" android:textAppearance="?android:attr/textAppearanceLarge" android:text="00:00" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/textView2" android:layout_alignBottom="@+id/textView2" android:layout_alignLeft="@+id/conf_status"></TextView>
        <Button android:layout_width="wrap_content" android:id="@+id/conf_cancel" android:text="Cancel" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/conf_ok" android:layout_alignBottom="@+id/conf_ok" android:layout_toRightOf="@+id/conf_status"></Button>
        <Button android:layout_width="wrap_content" android:id="@+id/conf_ok" android:text="OK" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignRight="@+id/conf_status" android:layout_marginRight="19dp" android:layout_marginBottom="36dp"></Button>
    </RelativeLayout>
  	
</LinearLayout>